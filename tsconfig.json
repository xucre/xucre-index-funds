{
  "compilerOptions": {
    "target": "es2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "checkJs": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "module": "esnext",
    "baseUrl": "./",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ],
      "@/components/*": ["components/*"],
      "@/service/*": ["service/*"],
      "@/hooks/*": ["hooks/*"],
      "@/config/*": ["config/*"],
      "@/context/*": ["context/*"],
      "@/metadata/*": ["metadata/*"],
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
